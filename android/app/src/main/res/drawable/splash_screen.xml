<?xml version="1.0" encoding="utf-8"?>
<!-- Layer-list ensures the splash icon stays centered and keeps its aspect ratio (not stretched) on all devices -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid dark background filling the screen -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#121212" />
        </shape>
    </item>
    <!-- Splash icon centered at intrinsic size - no stretch -->
    <item android:gravity="center">
        <bitmap
            android:src="@drawable/splash"
            android:gravity="center" />
    </item>
</layer-list>
